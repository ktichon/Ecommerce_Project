<% content_for :title, @book.name %>
<%= render @book, size: 600 %>
<%= simple_format(@book.description) %>
<%= form_with url: cart_index_path, method: :post  do |f| %>
  <%= f.hidden_field :id, value: @book.id%>
  <%= f.label :amount, "#" %>
  <%= f.number_field :amount, value: 1, in: 1..100, step: 1  %>
  <%= f.submit 'Add to Cart' %>
<% end %>