<% content_for :title, "Cart" %>

<% cart[1].each do |bookInCart| %>
  <%= form_with url: cart_path(bookInCart[0]), method: :patch  do |f| %>
    <%= f.hidden_field :id, value: bookInCart[0].id%>
    <%= f.label nil, "#{link_to bookInCart[0].name, bookInCart[0] }".html_safe %>
    <%= f.label :amount, "#" %>
    <%= f.number_field :amount, value: bookInCart[1] , in: 1..100, step: 1  %>
    <%= f.submit 'Update' %>
  <% end %>
 <p><%= link_to 'Remove', cart_path(bookInCart[0]), method: :delete %></p>
<% end %>
<% if cart[1].size > 0 %>
  <%= button_to "Checkout", checkout_path, :method => "get" %>

<% end %>
